{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "node"
        ],
        "importsNotUsedAsValues": "error",
        "ignoreDeprecations": "5.0",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",

    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}